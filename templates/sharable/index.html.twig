{% extends 'base.html.twig' %}

{% block title %}Sharables{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="/assets/css/search.css">
{% endblock %}

{% block content %}



{% if is_granted('create', sharable) %}
    <a class="btn btn-success btn-lg btn-block mb-3" href="{{ path('sharable_new') }}"><i class="fas fa-plus-circle"></i> create new sharable</a>
{% endif %}


<div class="container">

{{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="row">
        <div class="col-sm-6">
            {{ form_row(form.query) }}
        </div>
        <div class="col-xs-1" id="some-custom-id">
            {{ form_row(form.sortBy) }}
        </div>
        <div class="col-xs-1" id="some-custom-id">
            {{ form_row(form.order) }}
        </div>
        <div class="col-xs-1" id="some-custom-id">
            {{ form_row(form.search) }}
        </div>
    </div>
    <div class="row">
        <a class="btn mb-3 btn-secondary" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">advanced search</a>
    </div>
    <div class="row collapse" id="collapseExample">
        <div class="col" id="some-custom-id">
            {{ form_row(form.disabled) }}
        </div>
        <div class="col" id="some-custom-id">
            {{ form_row(form.validated) }}
        </div>
        <div class="col" id="some-custom-id">
            {{ form_row(form.managedBy) }}
        </div>
    </div>
{{ form_end(form) }}

</div>

<div class="alert alert-info">
{{ total }} sharables founded
</div>



{% for sharable in sharables %}

    {% set border = '' %}
    {% if sharable in managedSharables %}
        {% set border = 'border-primary' %}
    {% elseif sharable in validatedSharables %}
        {% set border = 'border-success' %}
    {% elseif sharable in interestedSharables %}
        {% set border = 'border-warning' %}
    {% endif %}


    <div class="card {{ border }} mb-3">
        <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title">
        {{ sharable.name }}
        {% if sharable.interesteds|length > 0 %}
        <span title="{{ sharable.interesteds|length }} users are insterested in this sharable" class="badge badge-warning">
            {{ sharable.interesteds|length }}
            <i class="fas fa-question-circle"></i>
        </span>
        {% endif %}
        {% if sharable.validations|length > 0 %}
        <span title="{{ sharable.validations|length }} users have validated this sharable" class="badge badge-success">
            {{ sharable.validations|length }}
            <i class="fas fa-check-circle"></i></span>
        {% endif %}
        {% if sharable.visibleBy %}
        <span title="accessible by {{ sharable.visibleBy.name }}" class="badge badge-primary">{{ sharable.visibleBy.name }}</span>
        {% endif %}
        {% if sharable.disabled %}
        <span class="badge badge-danger" title="This sharable is disabled"><i class="fas fa-ban"></i></span>
        {% endif %}
        {% if sharable in managedSharables %}
        <span title="You manage this sharable" class="badge badge-primary">
            <i class="fas fa-edit"></i>
        </span>
        {% endif %}
        </h5>
        <small>created {{ sharable.createdAt|ago }}</small>
    </div>


    <div class="card-body">


        
        <p class="card-subtitle mb-2 text-muted">{{ sharable.description }}</p>
        <a class="btn btn-primary" href="{{ path('sharable_show', {id: sharable.id}) }}"><i class="fas fa-info-circle"></i> details</a>

    </div>

</div>



{% endfor %}






{% endblock %}