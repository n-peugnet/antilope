{% extends 'base.html.twig' %}
{% import 'macros/breadcrumbs.html.twig' as breadcrumbs %}


{% block title %}{{ sharable.name }}{% endblock %}

{% block content %}



{{ breadcrumbs.render([
    {'url': url('sharable'), 'text': 'Sharables'},
    {'url': url('sharable_show', {id: sharable.id}), 'text': sharable.name},
    {'text': 'set Managers'},
]) }}

<h1>Managers</h1>

<ul class="list-group">
{% for manage in sharable.managedBy %}
    <li class="list-group-item">

    <a href="{{ path('user_show', {id: manage.user.id}) }}">{{ manage.user.username }}</a>
    <span class="badge badge-light">{{ manage.user.userClass.name }}</span>
    <span class="badge badge-light">{{ manage.confirmed ? 'confirmed' : 'invited' }}</span>
    <span class="ml-auto"><small>added {{ manage.createdAt|ago }}</small></span>


    </li>
{% endfor %}
</ul>


<div class="card mt-3">

    <div class="card-header">

        <div class="card-title">
            <h5>Invite manager</h5>
        </div>
    </div>

    <div class="card-body">

        <div class="alert alert-warning">Beware, once you've invited managers, you can't remove them.</div>

        {{ form(form) }}

    </div>
</div>

<div class="card mt-3">

    <div class="card-header">

        <div class="card-title">
            <h5>Remove manager</h5>
        </div>
    </div>

    <div class="card-body">

        {% if is_granted('remove', userManage) %}
            <a class="btn btn-primary" href="{{ path('manage_remove', {id: userManage.id }) }}">remove myself from managers</a>
        {% else %}
            <p>You cannot remove yourself from managers for now.</p>
        {% endif %}

    </div>
</div>



{% endblock %}