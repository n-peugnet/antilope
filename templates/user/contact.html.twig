{% extends 'base.html.twig' %}
{% import 'macros/breadcrumbs.html.twig' as breadcrumbs %}
{% import 'macros/content_by_type.html.twig' as content_by_type %}

{% block content %}



{{ breadcrumbs.render([
    {'url': url('user'), 'text': 'Users'},
    {'url': url('user_show', {id: user.id}), 'text': user.username},
    {'text': 'contacts'},
]) }}


<h1>Contacts</h1>

{% if is_granted('edit', user) %}
<a  class="btn btn-success" href="{{ path('user_contact_add', {id: user.id}) }}"><i class="fas fa-plus-circle"></i> add new contact</a>
{% endif %}



{% for contact in userContacts %}

<div class="card mt-3">

    <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title">                
                {{ content_by_type.render(contact.type, contact.content) }}
            </h5>

            <a href="{{ path('user_contact_edit', {id: user.id, cid: contact.id}) }}" class="btn btn-primary">
                <i class="fas fa-pen"></i>
                edit info
            </a>

    </div>

    {% if contact.info %}

    <div class="card-body">


        {% if contact.info|length > 500 %}
            <a class="btn btn-primary" data-toggle="collapse" href="#info_{{ contact.id }}" role="button" aria-expanded="false" aria-controls="info_{{ contact.id }}">
                View info
            </a>
            <div class="collapse" id="info_{{ contact.id }}">
                <pre>{{ contact.info }}</pre>
            </div>
        {% else %}
            <pre>{{ contact.info }}</pre>
        {% endif %}

        
    </div>

    {% endif %}
</div>
<p class="text-muted">
    Created
    {{ contact.createdAt|ago }}
    |
    <i class="fas fa-clock"></i>
    last edited
    {{ contact.lastEditedAt|ago }}
</p>

{% endfor %}


{% endblock %}