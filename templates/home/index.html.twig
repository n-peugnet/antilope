{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block content %}

<div class="jumbotron">

    <h1 class="display-4">{{ siteName }}</h1>

    <p class="lead">{{ siteDescription }}</p>

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <p>
        Discover <a href="{{ path('sharable') }}">sharables</a>, or <a href="{{ path('user_edit', {id: app.user.id}) }}">edit your profile</a>.
    </p>
    {% endif %}



</div>

{% if is_granted('IS_AUTHENTICATED_FULLY') %}


{% if siteAlert %}

<div class="alert alert-danger">{{ siteAlert }}</div>

{% endif %}

<div class="card mb-3">

    <div class="card-header">

        <div class="card-title">
        <h3>News</h3>
        </div>
    </div>

    <div class="card-body">

        <p class="card-subtitle mb-2">
            Some news...
        </p>

    </div>

</div>

<div class="card mb-3">

    <div class="card-header">
        <h3 class="card-title">Last active users</h3>
    </div>

    <div class="card-body">
        <ul class="list-group list-group-flush">
            {% for user in activeUsers %}
            <li class="list-group-item">
                <a href="{{ path('user_show', {id: user.id}) }}">{{ user.username }}</a>
                <a href="{{ path('userclass_show', {id: user.userClass.id}) }}">
                    <span class="badge badge-warning">{{ user.userClass.name }}</span>
                </a>
                <span class="badge badge-light">{{ user.shareScore }}</span>
                <small>last seen {{ user.lastActivity|ago }}</small>
            </li>
            {% endfor %}
        </ul>

    </div>

</div>

{% endif %}



{% if is_granted('IS_AUTHENTICATED_FULLY') or showHomeStats %}

<div class="card mb-3">

    <div class="card-header">

        <div class="card-title">
        <h3>Stats</h3>
        </div>
    </div>

    <div class="card-body">

        <ul>
            <li>
                Sharables : {{ sharableCount }}
            </li>
            <li>
                Validations : {{ validationCount }}
            </li>
            <li>
                Users : {{ userCount }}
            </li>
            <li>
                Users limit : {{ userLimit }}
            </li>
            <li>
                Registrations : {{ openRegistration ? 'open' : 'invite only' }}
            </li>
        </ul>
    </div>

</div>

{% endif %}



{% endblock %}
